server {
  server_name <%= @server_name %>;

  listen 80;
  root <%= @root_dir %>;
  index index.php;

  location / {
    try_files $uri $uri/ /index.php?$query_string;
  }

  error_page 404 /index.php;

  include hhvm.conf;

  location ~ /\.git {
    deny all;
  }

  location ~ /\.ht {
    deny all;
  }
}
